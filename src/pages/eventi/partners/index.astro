                I Nostri Partners
                </h2>

                <p class="mb-8">
                Scopri i professionisti con cui collaboriamo per rendere ogni evento unico.
                </p>

                <!-- React island -->
                <PartnersIsland client:load />

                {/** CTAs */}
                <div class="flex justify-center items-center">
                    <div class="flex flex-1 justify-center">
                        <CTAActions2 client:load />
                    </div>
                </div>

            </div>
        </section>
    </CateringLayout>
</BaseLayout>

