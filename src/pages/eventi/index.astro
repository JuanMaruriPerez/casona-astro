---
import BaseLayout from "@/components/layouts/BaseLayout.astro";
import CateringLayout from "@/components/layouts/CateringLayout.astro";
import Hero from "./_Hero.astro";
import CTA from "./_CTA.astro";
import PortafolioHero from "./_PortafolioHero.astro";
import ServicesHero from "./_ServicesHero.astro";
import Stats from "./_Stats.astro";
import Testimonios from "./_Testimonios.astro";


const title =
  "Catering per Eventi | La Casona Group â€“ Bologna e Provincia";

const description =
  "Catering e banqueting per eventi privati e aziendali. La Casona Group cura ogni dettaglio per eventi eleganti e su misura a Bologna.";

const canonical =
  "https://lacasonagroup.it/eventi/";

const ogImage = "https://lacasonagroup.it/assets/og/eventi.jpg";

const schema = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://lacasonagroup.it/eventi/",
    url: "https://lacasonagroup.it/eventi/",
    name: "Eventi & Catering | La Casona Group",
    description:
      "Catering e banqueting per eventi privati, matrimoni e aziende a Bologna.",
    inLanguage: "it-IT",
    isPartOf: {
      "@id": "https://lacasonagroup.it/#website"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "Service",
    name: "Catering e banqueting per eventi",
    provider: {
      "@type": "Organization",
      name: "La Casona Group",
      url: "https://lacasonagroup.it/"
    },
    areaServed: {
      "@type": "AdministrativeArea",
      name: "Emilia-Romagna"
    },
    serviceType: [
      "Catering per matrimoni",
      "Eventi aziendali",
      "Eventi privati",
      "Banqueting"
    ],
    availableChannel: {
      "@type": "ServiceChannel",
      serviceLocation: {
        "@type": "Place",
        name: "Bologna"
      }
    }
  }
];
---

<BaseLayout title={title} description={description} canonical={canonical} ogImage={ogImage}
  ogType="website" schema={schema}
  preloadVideos={[
    {
      src: "/assets/video/eventi-portada-720.webm",
      type: "video/webm",
    },
  ]}>
    <CateringLayout>
        <div class="overflow-x-hidden bg-white flex flex-col ">
            <Hero/>
            <ServicesHero/>
            <Stats/>
            <PortafolioHero/>
            <Testimonios />
            <CTA/>
        </div>
    </CateringLayout>
</BaseLayout>