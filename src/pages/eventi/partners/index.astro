---
import CTAActions2 from "@/components/bloques/CTAActions2";
import  PartnersIsland from "@/components/bloques/PartnersIslands";
import BaseLayout from "@/components/layouts/BaseLayout.astro";
import CateringLayout from "@/components/layouts/CateringLayout.astro";

const title =
  "Partners | La Casona Group â€“ Location e Professionisti per Eventi";

const description =
  "Scopri i partner di La Casona Group: location, fotografi, flower designer, intrattenimento e professionisti selezionati.";

const canonical =
  "https://lacasonagroup.it/eventi/partners/";
---

<BaseLayout title={title} description={description} canonical={canonical}>
    <CateringLayout>
        <section class="bg-white pt-48">
            <div class="max-w-6xl mx-auto px-6 text-center">

