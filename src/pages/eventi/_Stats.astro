      const Icon = stat.icon;
      return (
        <div class="flex flex-col items-center gap-2">
          <div class="bg-amarilloPastel rounded-full p-4 flex items-center justify-center">
            <Icon className="w-10 h-10 text-burdeaux" />
          </div>    

          <h3 class="text-3xl font-bold text-amarillo">
            {stat.value}
          </h3>

          <p class="text-sm text-white font-light">
            {stat.label}
          </p>
        </div>
      );
    })}
  </div>
</section>
