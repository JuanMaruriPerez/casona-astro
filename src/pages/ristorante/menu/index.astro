        function setLang(lang) {
          if (lang === "en") {
            menuIt.classList.add("hidden");
            menuEn.classList.remove("hidden");
            btnIt.classList.add("opacity-50");
            btnEn.classList.remove("opacity-50");
          } else {
            menuEn.classList.add("hidden");
            menuIt.classList.remove("hidden");
            btnEn.classList.add("opacity-50");
            btnIt.classList.remove("opacity-50");
          }
          localStorage.setItem("menu-lang", lang);
        }

        // default
        const saved = localStorage.getItem("menu-lang") || "it";
        setLang(saved);

        btnIt.addEventListener("click", () => setLang("it"));
        btnEn.addEventListener("click", () => setLang("en"));
      </script>

