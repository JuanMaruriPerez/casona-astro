---
import BaseLayout from "@/components/layouts/BaseLayout.astro";
import RistoranteLayout from "@/components/layouts/RistoranteLayout.astro";

const title =
  "Ristorante La Casona tutti fritti | La Casona Group – Cucina Emiliana a Bologna";

const description =
  "Il ristorante La Casona Tutti Fritti, a San Giovanni in Persiceto (Bologna), propone cucina emiliana autentica con crescentine e tigelle tradizionali, piatti tipici bolognesi e ingredienti selezionati in un’atmosfera accogliente.";

const canonical =
  "https://lacasonagroup.it/ristorante/";

const ogImage = "https://lacasonagroup.it/assets/og/ristorante-og.jpg";

const ogType="website";

const schema = {
  "@context": "https://schema.org",
  "@type": "Restaurant",
  name: "La Casona Tutti Fritti",
  url: "https://lacasonagroup.it/ristorante/",
  servesCuisine: "Cucina emiliana",
  priceRange: "€€",
  address: {
    "@type": "PostalAddress",
    addressLocality: "Bologna",
    addressCountry: "IT"
  }
};

import Hero from "./_Hero.astro";
import CTA from "./_CTA.astro";
import FoodMaking from "./_FoodMaking.astro";
import Lugar from "./_Lugar.astro";
import Proposta from "./_Proposta.astro";
import Proveedores from "./_Proveedores.astro";
import Testimonios from "@/components/bloques/Testimonios";
---

<BaseLayout title={title} description={description} canonical={canonical} ogImage={ogImage}
  ogType={ogType} schema={schema}
  ogType="website" schema={schema}
  preloadVideos={[
    {
      src: "/assets/video/ristorante-portada-720.webm",
      type: "video/webm",
    },
  ]}>
    <RistoranteLayout>
        <div class="overflow-x-hidden bg-pastel">
            <Hero />
            <Proposta />
            <FoodMaking />
            <Proveedores />
            <Lugar />
            <Testimonios client:load />
            <CTA />
        </div>
    </RistoranteLayout>
</BaseLayout>